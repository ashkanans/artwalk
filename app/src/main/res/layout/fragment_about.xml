<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="About Art Walk"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- App Icon -->
    <ImageView
        android:id="@+id/image_app_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/text_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_logo" />

    <!-- Description -->
    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_app_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Art Walk is your ultimate guide to discovering the vibrant art scene of Rome. Whether you're a passionate art enthusiast or just looking to explore the city's cultural treasures, our app provides you with an immersive experience like no other. With Art Walk, you can embark on a journey through Rome's streets and uncover hidden masterpieces, learn about renowned artists, and engage with art in exciting new ways."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- Features -->
    <TextView
        android:id="@+id/text_features_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Key Features"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_features_title"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Feature 1 -->
        <TextView
            android:id="@+id/text_feature_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="1. Augmented Reality Art Overlays"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Feature 2 -->
        <TextView
            android:id="@+id/text_feature_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="2. Interactive Artwork Information"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Feature 3 -->
        <TextView
            android:id="@+id/text_feature_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="3. Personalized Art Itineraries"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Feature 4 -->
        <TextView
            android:id="@+id/text_feature_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="4. Discover Hidden Art Gems"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Feature 5 -->
        <TextView
            android:id="@+id/text_feature_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="5. Engaging Art Videos"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Version -->
    <TextView
        android:id="@+id/text_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_features"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Version 1.0"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>
