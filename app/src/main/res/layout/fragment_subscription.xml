<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp"
    tools:context=".SubscriptionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/selected_image_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Selected Image"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_image_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_image"
                android:layout_marginTop="10dp"
                android:text="Labels:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_label_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labels"
                android:layout_marginTop="5dp"
                android:text="-" />

            <TextView
                android:id="@+id/texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_label_results"
                android:layout_marginTop="10dp"
                android:text="Texts:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_texts_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/texts"
                android:layout_marginTop="5dp"
                android:text="-" />

            <TextView
                android:id="@+id/landmarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_texts_results"
                android:layout_marginTop="10dp"
                android:text="Landmarks:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_landmarks_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/landmarks"
                android:layout_marginTop="5dp"
                android:text="-" />

            <Button
                android:id="@+id/select_image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_landmarks_results"
                android:layout_alignParentBottom="true"
                android:text="Choose an Image" />


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
